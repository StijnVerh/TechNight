{
	"name": "technight-cap-datasphere",
	"version": "1.0.0",
	"description": "CAP project which connects to Datasphere by use of a HDI container.",
	"repository": "<Add your repository here>",
	"license": "UNLICENSED",
	"private": true,
	"dependencies": {
		"@cap-js-community/odata-v2-adapter": "^1.13.7",
		"@sap/cds": "^8",
		"@sap/cds-dk": "^8.4.1",
		"@sap/xssec": "^4",
		"express": "^4",
		"hdb": "^0.19.10",
		"passport": "^0"
	},
	"devDependencies": {
		"sqlite3": "^5.1.7"
	},
	"scripts": {
		"start": "cds run",
		"start:hybrid": "cds watch --profile hybrid",
		"cf:login": "cf login -a https://api.cf.eu10.hana.ondemand.com/ --sso"
	},
	"engines": {
		"node": "18.x"
	},
	"eslintConfig": {
		"extends": "eslint:recommended",
		"env": {
			"es2020": true,
			"node": true,
			"jest": true,
			"mocha": true
		},
		"globals": {
			"SELECT": true,
			"INSERT": true,
			"UPDATE": true,
			"DELETE": true,
			"CREATE": true,
			"DROP": true,
			"CDL": true,
			"CQL": true,
			"CXL": true,
			"cds": true
		},
		"rules": {
			"no-console": "off",
			"require-atomic-updates": "off"
		}
	},
	"cds": {
		"requires": {
			"db": {
				"kind": "hana-cloud"
			},
			"auth": {
				"kind": "basic",
				"users": {
					"technight@flexso.com": {
						"password": "technight",
						"roles": [
							"TechNight"
						]
					},
					"*": false
				}
			}
		},
		"hana": {
			"deploy-format": "hdbtable"
		}
	}
}
